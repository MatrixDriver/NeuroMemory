# NeuroMemory v2 Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL connection URL (async)
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://neuromemory:neuromemory@localhost:5432/neuromemory

# PostgreSQL connection URL (sync, for migrations if needed)
DATABASE_URL_SYNC=postgresql://neuromemory:neuromemory@localhost:5432/neuromemory

# =============================================================================
# Embedding Service Configuration
# =============================================================================

# Embedding provider (currently only 'siliconflow' is supported)
EMBEDDING_PROVIDER=siliconflow

# SiliconFlow API Key (required for vector search functionality)
# Get your key from: https://cloud.siliconflow.cn
SILICONFLOW_API_KEY=your-siliconflow-api-key-here

# Embedding dimensions (default: 1024 for BAAI/bge-m3)
EMBEDDING_DIMS=1024

# =============================================================================
# Server Configuration
# =============================================================================

# Server host (default: 0.0.0.0 for all interfaces)
# HOST=0.0.0.0

# Server port (default: 8765)
# PORT=8765

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# API Configuration
# =============================================================================

# API key prefix (default: nm_)
# API_KEY_PREFIX=nm_

# =============================================================================
# Development & Testing
# =============================================================================

# Enable debug mode (not recommended for production)
# DEBUG=false

# Test database URL (optional, defaults to DATABASE_URL)
# TEST_DATABASE_URL=postgresql+asyncpg://neuromemory:neuromemory@localhost:5432/neuromemory_test

# =============================================================================
# Docker Compose Variables
# =============================================================================

# These are used by docker-compose.v2.yml and are usually auto-configured
# POSTGRES_USER=neuromemory
# POSTGRES_PASSWORD=neuromemory
# POSTGRES_DB=neuromemory
